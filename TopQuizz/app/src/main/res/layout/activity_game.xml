<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    tools:context="com.madhadesgames.topquizz.controller.GameActivity">


    <TextView
        android:id="@+id/activity_game_question_txt"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginVertical="5dp"
        android:background="#00BCD4"
        android:gravity="center"
        android:text="This is the Question :"
        android:textStyle="bold" />

    <Button
        android:id="@+id/activity_game_answer1_btn"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:background="#6419E9"
        android:text="ANSWER 1"
        android:textColor="@android:color/white"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/activity_game_answer2_btn"
        android:layout_marginVertical="2dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:background="#6419E9"
        android:text="ANSWER 2"
        android:textColor="@android:color/white"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/activity_game_answer3_btn"
        android:layout_marginVertical="2dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:background="#6419E9"
        android:text="ANSWER 3"
        android:textColor="@android:color/white"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/activity_game_answer4_btn"
        android:layout_marginVertical="2dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:background="#6419E9"
        android:text="ANSWER 4"
        android:textColor="@android:color/white"
        android:textSize="25dp"/>

</LinearLayout>